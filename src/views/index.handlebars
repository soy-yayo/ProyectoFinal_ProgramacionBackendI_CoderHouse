<div class="flex justify-center items-center min-h-screen bg-gray-100 p-4">
  <div class="w-full max-w-4xl bg-white shadow-lg rounded-lg p-6">
    <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      {{#each products}}
        <li class="bg-gray-200 p-4 rounded-lg shadow-md hover:shadow-lg transition duration-300">
          <h2 class="text-2xl font-black text-gray-900 mb-2">{{name}}</h2>
          <p class="text-lg text-gray-700 font-semibold">Precio: <span class="text-green-600 font-bold">${{price}}</span></p>
          <div class="flex justify-center">
            <img src="{{thumbnail}}" alt="{{name}}" class="w-40 h-40 object-cover rounded-lg border border-gray-300">
          </div>
          <p class="mt-2 text-sm text-gray-600">Categor√≠a: <span class="font-medium text-gray-800">{{category}}</span></p>
          <p class="mt-2 text-xs text-gray-500">ID: <span class="font-mono text-gray-700">{{_id}}</span></p>
          <p class="mt-2 text-sm font-semibold" :class="stock > 0 ? 'text-green-700' : 'text-red-700'">
            Stock: <span class="font-bold">{{stock}}</span>
          </p>
          <button 
            class="mt-4 w-full bg-blue-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-300"
            onclick="addToCart('{{_id}}')"
            {{#unless stock}}disabled class="bg-gray-400 cursor-not-allowed"{{/unless}}>
            Agregar al carrito
          </button>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
